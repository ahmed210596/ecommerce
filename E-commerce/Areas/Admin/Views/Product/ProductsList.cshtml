@model List<Product>
<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">

            <a class="btn-btn-success" asp-action="CreateProduct">
                <i class="zmdi zmdi-plus"></i>add Product
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25">List of product</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Category </th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model)
                    {
                        <tr>
                            <td>@prod.ProductId</td>
                            <td>@prod.ProdutName</td>
                            <td>@prod.Category.CategoryName</td>
                            <td>
                                <a asp-action="EditCategory" asp-route-Id="@prod.ProductId" class="btn btn-primary">Edit</a>
                                <a asp-action="DeleteCategory" asp-route-Id="@prod.ProductId" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                    }





                </tbody>
            </table>
        </div>
    </div>
</div>   