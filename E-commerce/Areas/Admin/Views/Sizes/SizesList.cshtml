@model List<Size>
<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">

            <a class="btn-btn-success" asp-action="CreateSize">
                <i class="zmdi zmdi-plus"></i>add Size
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25">List of Sizes</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Size Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var size in Model)
                    {
                        <tr>
                            <td>@size.SizeId</td>
                            <td>@size.SizeName</td>
                            <td>
                                <a asp-action="EditSize" asp-route-Id="@size.SizeId" class="btn btn-primary">Edit</a>
                                <a asp-action="DeleteSize" asp-route-Id="@size.SizeId" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                    }





                </tbody>
            </table>
        </div>
    </div>
</div>   