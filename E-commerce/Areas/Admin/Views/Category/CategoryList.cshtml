@model List<Category>
<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            
            <a class="btn-btn-success" asp-action="CreateCategory">
                <i class="zmdi zmdi-plus"></i>add Category
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25">List of Categories</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category Name</th>
                        <th>Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach(var cat in Model)
                    {
                    <tr>
                        <td>@cat.CategoryId</td>
                        <td>@cat.CategoryName</td>
                        <td><a asp-action="EditCategory" asp-route-Id="@cat.CategoryId" class="btn btn-primary">Edit</a>
                                <a asp-action="DeleteCategory" asp-route-Id="@cat.CategoryId" class="btn btn-danger">Delete</a>
                        </td>
                        
                    </tr>
                    }
                   
                   
                    
                    
                    
                </tbody>
            </table>
        </div>
    </div>
 </div>   